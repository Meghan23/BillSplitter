<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bill"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:id="@+id/itema"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="31dp"
        android:layout_marginTop="98dp"
        android:background="#fff"
        android:hint="DishName"
        android:inputType="text"
        android:textColorHint="@android:color/black" />

    <EditText
        android:id="@+id/person1"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="215dp"
        android:background="#fff"
        android:hint="Person1"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="@android:color/black" />

    <EditText
        android:id="@+id/person2"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="205dp"
        android:background="#fff"
        android:hint="Person2"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="@android:color/black" />

    <EditText
        android:id="@+id/price1"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/itema"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="64dp"
        android:background="#fff"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:textColorHint="@android:color/black" />


    <EditText
        android:id="@+id/item2"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/itema"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="151dp"
        android:background="#fff"
        android:hint="DishName"
        android:inputType="text"
        android:textColorHint="@android:color/black" />

    <EditText
        android:id="@+id/price2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/price1"
        android:layout_alignTop="@+id/item2"
        android:layout_gravity="center_horizontal"
        android:background="#fff"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:textColorHint="@android:color/black"/>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="91dp"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Next"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Bill Details"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>
